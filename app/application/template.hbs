<header>
  {{#unless noNav}}
    {{#nav-bar brand="mYgration"}}
      {{#if session.isAuthenticated}}
        {{nav-link link='go' icon='search'}}         
        {{nav-link link='me.listings.add' icon='add'}}
        {{#nav-link link='me' icon='person' pull='left'}}
            {{me.firstName}} {{me.lastName}}
        {{/nav-link}}
      {{else}}
        {{nav-link link='login' icon='launch'}}
      {{/if}}
    {{/nav-bar}}
  {{/unless}}
</header>

<main>
  {{#unless noContainer}}
    <div class='container'>
      {{outlet}}
    </div>
  {{else}}
    {{outlet}}
  {{/unless}}
</main>

{{#unless noFooter}}
  {{footer-bar}}
{{/unless}}

{{ember-notify messageStyle='bootstrap'}}