{{#if adding}}
  <div class="row">
    <div class="col m4 input-field">
      {{#x-select value=industry classNames="browser-default"}}
        <option>Select industry</option>
        {{#each industries as |industry|}}
          {{#x-option value=industry}}
            {{industry.name}}
          {{/x-option}}
        {{/each}}
      {{/x-select}}
    </div>
    {{md-input class="m3" value=role}}
    <div class="col m4 input-field">
      {{#x-select value=length classNames="browser-default"}}
        <option>Select proficiency</option>
        {{#each-in model.lengthEnum as |value label|}}
          {{#x-option value=value}}
            {{label}}
          {{/x-option}}
        {{/each-in}}
      {{/x-select}}      
    </div>
    {{save-button isValid=isValid}}
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'add'}}>
    Add Work Experience
    <i class="fa-plus"></i>
  </button>
{{/if}}