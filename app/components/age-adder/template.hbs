{{#if adding}}
  <div class="row">
    <div class="col-md-11">
      {{input value=model classNames="form-control" type="number"}}
    </div>
    <div class="col-md-1">
      <button class="btn btn-primary" disabled={{unless isValid true}} {{action 'save'}}>
        <i class="fa-check"></i>
      </button>
    </div>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'add'}}>
    Add Age
    <i class="fa-plus"></i>
  </button>
{{/if}}