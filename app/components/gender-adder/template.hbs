{{#if adding}}
  <div class="row">
    <div class="col-md-11">
      {{#x-select value=model classNames="form-control"}}
        <option>Select gender</option>
        {{#each genders as |gender|}}
          {{#x-option value=gender}}
            {{gender.genderString}}
          {{/x-option}}
        {{/each}}
      {{/x-select}}
    </div>
    <div class="col-md-1">
      <button class="btn btn-primary" disabled={{unless isValid true}} {{action 'save'}}>
        <i class="fa-check"></i>
      </button>
    </div>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'add'}}>
    Select Gender
  </button>
{{/if}}